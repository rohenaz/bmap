{
    "name": "bmapjs",
    "version": "0.4.0-beta.46",
    "description": "A transaction parser for Bitcoin data protocols like B, MAP, BAP, 1Sat Ordinals, SIGMA, METANET and AIP/HAIP.",
    "types": "types/index.d.ts",
    "module": "dist/bmap.module.js",
    "main": "dist/bmap.js",
    "type": "commonjs",
    "targets": {
        "main": {
            "isLibrary": true,
            "context": "node",
            "source": "src/bmap.ts",
            "engines": {
                "node": ">=14"
            }
        },
        "module": {
            "isLibrary": true,
            "context": "node",
            "source": "src/bmap.ts"
        },
        "types": {
            "source": "src/bmap.ts"
        }
    },
    "engines": {
        "node": "22"
    },
    "scripts": {
        "prebuild": "mkdir -p types && touch types/index.d.ts",
        "serve": "bun run build && node ./node_modules/ws/index.js",
        "clean": "rimraf dist/ types/index.d.ts parcel-bundle-reports .parcel-cache",
        "build": "rimraf parcel-bundle-reports dist/ types/index.d.ts && parcel build . --target types --target module --target main --reporter @parcel/reporter-bundle-analyzer",
        "lint": "eslint ./src",
        "lintfix": "eslint ./src --fix",
        "testonly": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --collectCoverage",
        "testwatch": "./node_modules/.bin/jest --watchAll --collectCoverage",
        "test": "bun run lint && bun run testonly",
        "test-watch": "bun run testwatch",
        "check": "./node_modules/.bin/npm-check -u",
        "pub": "./node_modules/.bin/np || true",
        "build-all": "bun run lint && bun run build-public",
        "watch": "parcel-watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rohenaz/bmap.git"
    },
    "keywords": [
        "bitcoin",
        "bmap",
        "magic",
        "attribute",
        "protocol",
        "bsv"
    ],
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@jest/types": "^29.6.3",
        "@parcel/compressor-brotli": "^2.13.2",
        "@parcel/compressor-gzip": "^2.13.2",
        "@parcel/config-default": "^2.13.2",
        "@parcel/packager-ts": "2.13.2",
        "@parcel/reporter-bundle-analyzer": "^2.13.2",
        "@parcel/transformer-typescript-tsc": "^2.13.2",
        "@parcel/transformer-typescript-types": "2.13.2",
        "@types/jest": "^29.5.14",
        "@types/node": "^18.19.68",
        "@types/node-fetch": "^2.6.12",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "@typescript-eslint/parser": "^5.62.0",
        "buffer": "^5.7.1",
        "cross-env": "^7.0.3",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^8.10.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.7.0",
        "jest-cli": "29.3.1",
        "jest-config": "29.3.1",
        "jest-environment-jsdom": "^29.7.0",
        "ncp": "^2.0.0",
        "np": "2.20.1",
        "parcel": "^2.13.2",
        "prettier": "^2.8.8",
        "rimraf": "^3.0.2",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^4.9.5"
    },
    "author": "Satchmo",
    "license": "Open BSV",
    "bugs": {
        "url": "https://github.com/rohenaz/bmap/issues"
    },
    "homepage": "https://github.com/rohenaz/bmap#readme",
    "dependencies": {
        "@bsv/sdk": "^1.2.14",
        "@moneybutton/paymail-client": "^0.39.0",
        "@msgpack/msgpack": "^2.8.0",
        "bpu-ts": "^0.0.26",
        "node-fetch": "^2.7.0"
    }
}
