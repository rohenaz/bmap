{
	"ts-node": {
		"transpileOnly": true,
		"moduleTypes": {
			"jest.config.ts": "cjs"
		}
	},
	"include": [
		"src/*.ts",
		"src/**/*.ts",
		"types/**/*.d.ts",
		"types/**/**/*.d.ts",
		"tests/**/*.test.ts"
	],
	"exclude": ["coverage", "functions", "tests", ".parcel-cache"],
	"files": ["jest.config.ts"],
	"compileOnSave": true,
	"compilerOptions": {
		"removeComments": true,
		"declaration": true,
		"target": "es2018",
		"moduleResolution": "node",
		"typeRoots": ["./node_modules/@types", "./types"],
		"lib": ["dom"],
		"types": ["node", "jest"],
		"resolveJsonModule": true,
		"inlineSourceMap": true,
		"declarationMap": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"isolatedModules": false,
		"skipLibCheck": true,
		"module": "CommonJS"
	}
}
