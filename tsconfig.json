{
    "ts-node": {
        "transpileOnly": true,
        "moduleTypes": {
            "jest.config.ts": "cjs"
        }
    },
    "include": ["src/**/*.ts", "types/**/*.d.ts", "tests/**/*.test.ts"],
    "exclude": ["coverage", "functions", "tests", "node_modules"],
    "compileOnSave": true,
    "compilerOptions": {
        "lib": ["es2017", "dom"],
        "declaration": true,
        "target": "es5",
        "allowJs": true,
        "moduleResolution": "node",
        "typeRoots": ["./", "./node_modules/@types", "./types"],
        "types": ["node", "jest"],
        "resolveJsonModule": true,
        "declarationMap": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "isolatedModules": false,
        "skipLibCheck": true,
        "module": "es6"
    },
    "files": ["src/bmap.ts"],
    "paths": {
        "stream": ["./node_modules/stream-browserify"],
        "crypto": ["./node_modules/crypto-browserify"]
    }
}
